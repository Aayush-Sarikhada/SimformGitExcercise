<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".ProfileActivity">

    <TextView
        android:id="@+id/tv_user_greet"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/msg_user_greeting"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/button_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:text="@string/action_edit_greeting"
        app:layout_constraintEnd_toEndOf="@id/tv_user_greet"
        app:layout_constraintStart_toStartOf="@id/tv_user_greet"
        app:layout_constraintTop_toBottomOf="@id/tv_user_greet" />

</androidx.constraintlayout.widget.ConstraintLayout>